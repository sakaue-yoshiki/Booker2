<main>
  <div class="container">
    <div class="row">
      <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
        <h2>User info</h2>
        
        <%= form_with model: @user do |f| %>
        
        <div id="error_explanation">
          <% if @user.errors.any? %>
            <h2><%= @user.errors.count %>errors prohibited this obj from being saved:</h2>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          <% end %>
        </div>
          
          <div class="form-group">
            <label for="user_name">Name</label>
            <%= f.text_field :name, autofocus: true, id:"inputName", class:'form-control name'%>
          </div>
          
          <div class="form-group">
            <label for="user_image">Image</label>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*", class:'form-control-file user_image' %> 
          </div>
          
          <div class="form-group">
            <label for="user_introduction">Introduction</label>
            <%= f.text_area :introduction, autofocus: true, id:"inputintroduction", class:'form-control introduction'%>
          </div>
          
          <div class="form-group">
            <%= f.submit "Update User", class:'btn btn-secondary' %>
          </div>
          
        <% end %>
      </div>
    </div>
  </div>
</main>

<footer>
  <div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
</footer>
  